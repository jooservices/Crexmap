<?xml version="1.0" encoding="utf-8"?>
<extension method="upgrade" version="3.4" type="component">
    <name>COM_CREXMAP</name>
    <creationDate>01-19-2016</creationDate>
    <author>Viet Vu</author>
    <copyright>This component is released under the GNU/GPL License</copyright>
    <authorEmail>support@jooservices.com</authorEmail>
    <authorUrl>http://www.jooservices.com.com</authorUrl>
    <version>0.5.0</version>
    <license>GNU/GPL</license>
    <description>COM_CREXMAP_DESC</description>
	
    <install folder="admin">
        <sql>
            <file driver="mysql" charset="utf8">install/install.utf8.sql</file>
            <file driver="postgresql" charset="utf8">install/install.postgresql.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">install/uninstall.utf8.sql</file>
            <file driver="postgresql" charset="utf8">install/uninstall.postgresql.sql</file>
        </sql>
    </uninstall>
	
    <files folder="site">
	<folder>assets</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>models</folder>
        <folder>views</folder>
        <filename>controller.php</filename>
        <filename>displayer.php</filename>
        <filename>index.html</filename>
        <filename>metadata.xml</filename>
        <filename>router.php</filename>
        <filename>crexmap.php</filename>        
    </files>
    <languages folder="front/language">
        <language tag="en-GB">en-GB.com_crexmap.ini</language>
        <language tag="es-ES">es-ES.com_crexmap.ini</language>
        <language tag="fa-IR">fa-IR.com_crexmap.ini</language>
        <language tag="cs-CZ">cs-CZ.com_crexmap.ini</language>
        <language tag="nl-NL">nl-NL.com_crexmap.ini</language>
        <language tag="ru-RU">ru-RU.com_crexmap.ini</language>
    </languages>
    <images folder="admin">
        <folder>images</folder>
    </images>
	
    <administration>
        <menu img="components/com_crexmap/images/crexmap-favicon.png">COM_XMAP_TITLE</menu>
        <files folder="admin">
		     <folder>css</folder>
            <folder>elements</folder>
            <folder>images</folder>
            <folder>install</folder>
            <folder>helpers</folder>
            <folder>controllers</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>models</folder>
            <filename>crexmap.php</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>LICENSE.txt</filename>    
        </files>
        <languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_crexmap.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_crexmap.sys.ini</language>
            <language tag="es-ES">es-ES/es-ES.com_crexmap.ini</language>
            <language tag="es-ES">es-ES/es-ES.com_crexmap.sys.ini</language>
            <language tag="fa-IR">fa-IR/fa-IR.com_crexmap.ini</language>
            <language tag="fa-IR">fa-IR/fa-IR.com_crexmap.sys.ini</language>
            <language tag="cs-CZ">cs-CZ/cs-CZ.com_crexmap.ini</language>
            <language tag="cs-CZ">cs-CZ/cs-CZ.com_crexmap.sys.ini</language>
            <language tag="nl-NL">nl-NL/nl-NL.com_crexmap.ini</language>
            <language tag="nl-NL">nl-NL/nl-NL.com_crexmap.sys.ini</language>
            <language tag="ru-RU">ru-RU/ru-RU.com_crexmap.ini</language>
            <language tag="ru-RU">ru-RU/ru-RU.com_crexmap.sys.ini</language>
        </languages>
        <images folder="admin">
            <folder>images</folder>
        </images>
    </administration>
	
    <updateservers>
        <server type="extension" priority="1" name="CrexMap Update Site">https://raw.github.com/guilleva/Xmap/master/crexmap-update.xml</server>
    </updateservers>
	
</extension>
